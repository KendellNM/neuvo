<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_DATA_SYNC" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" android:maxSdkVersion="28" />
    
    <uses-feature android:name="android.hardware.camera" android:required="false" />
    <uses-feature android:name="android.hardware.camera.autofocus" android:required="false" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.DoloresApp"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".RegisterActivity"
            android:exported="true" />
        <activity
            android:name=".LoginActivity"
            android:exported="true" />

        <activity
            android:name=".SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:exported="true" />
        <activity
            android:name=".presentation.ui.QRScannerActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".presentation.ui.DeliveryTrackingActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.ui.RecetaDigitalActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.ui.FidelizacionActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.ui.NotificacionesActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.ui.RepartidorActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".presentation.ui.HomeActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.ui.ProductosActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.ui.ProductoDetalleActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.ui.CarritoActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.ui.CheckoutActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.ui.MisPedidosActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.ui.PedidosAsignadosActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.ui.GestionPedidosActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.ui.GestionUsuariosActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.ui.GestionStockActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.ui.VentaPresencialActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
            
        <!-- OSMDroid no requiere API Key - 100% GRATIS -->
            
        <!-- FileProvider para compartir archivos -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>
        
        <!-- Servicios de Notificaciones (Sin Firebase) -->
        <service
            android:name=".services.NotificationService"
            android:enabled="true"
            android:exported="false"
            android:foregroundServiceType="dataSync" />
            
        <service
            android:name=".services.NotificationWebSocketService"
            android:enabled="true"
            android:exported="false"
            android:foregroundServiceType="dataSync" />
    </application>
    
</manifest>