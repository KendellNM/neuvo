<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0FDF4">

    <!-- Mapa de fondo (60% superior) -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <org.osmdroid.views.MapView
            android:id="@+id/map_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <!-- Overlay gradiente -->
        <View
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/gradient_green_top" />
    </FrameLayout>

    <!-- Top Bar flotante -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:paddingHorizontal="20dp"
        android:gravity="center_vertical">

        <!-- Botón Volver -->
        <FrameLayout
            android:id="@+id/btnBack"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:background="@drawable/bg_button_white_round"
            android:clickable="true"
            android:focusable="true"
            android:elevation="4dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_arrow_back"
                app:tint="#064E3B" />
        </FrameLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <!-- Badge En Vivo -->
        <LinearLayout
            android:id="@+id/connectionIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/bg_badge_live"
            android:paddingHorizontal="12dp"
            android:paddingVertical="8dp"
            android:elevation="4dp">

            <View
                android:id="@+id/dotConnection"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:background="@drawable/bg_dot_green" />

            <TextView
                android:id="@+id/tvConnection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="En camino"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#064E3B" />
        </LinearLayout>
    </LinearLayout>

    <!-- Panel inferior con información -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/bottomPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="32dp"
        app:cardElevation="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Handle -->
            <View
                android:layout_width="48dp"
                android:layout_height="5dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/bg_handle_gray"
                android:layout_marginBottom="20dp" />

            <!-- Tiempo estimado grande -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="20dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tiempo estimado"
                        android:textSize="12sp"
                        android:textColor="#6B7280" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="bottom">

                        <TextView
                            android:id="@+id/tv_tiempo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="15-20"
                            android:textSize="36sp"
                            android:textStyle="bold"
                            android:textColor="#064E3B" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="6dp"
                            android:layout_marginBottom="6dp"
                            android:text="min"
                            android:textSize="16sp"
                            android:textColor="#9CA3AF" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Icono reloj -->
                <FrameLayout
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:background="@drawable/bg_circle_light_green">

                    <ImageView
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_time"
                        app:tint="#10B981" />
                </FrameLayout>
            </LinearLayout>

            <!-- Barra de progreso -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:id="@+id/tvStep1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Confirmado"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        android:textColor="#064E3B" />

                    <TextView
                        android:id="@+id/tvStep2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="En camino"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        android:textColor="#064E3B" />

                    <TextView
                        android:id="@+id/tvStep3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:text="Entregado"
                        android:textSize="11sp"
                        android:textColor="#9CA3AF" />
                </LinearLayout>

                <!-- Progress Bar -->
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="8dp">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_progress_track" />

                    <View
                        android:id="@+id/progressBar"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_progress_fill" />
                </FrameLayout>
            </LinearLayout>

            <!-- Info del repartidor -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/repartidorCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#F9FAFB"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:strokeWidth="1dp"
                app:strokeColor="#F3F4F6">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        app:cardCornerRadius="22dp"
                        app:cardElevation="2dp"
                        app:strokeWidth="2dp"
                        app:strokeColor="@android:color/white">

                        <ImageView
                            android:id="@+id/imgRepartidor"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_user"
                            android:background="#E5E7EB"
                            android:padding="10dp" />
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Info -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="12dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvRepartidorNombre"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Carlos M."
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="#064E3B" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="12dp"
                                android:layout_height="12dp"
                                android:src="@drawable/ic_star"
                                app:tint="#FBBF24" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="4dp"
                                android:text="4.9 • Motorizado"
                                android:textSize="12sp"
                                android:textColor="#10B981" />
                        </LinearLayout>
                    </LinearLayout>

                    <FrameLayout
                        android:id="@+id/btnLlamar"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/bg_button_outline_round"
                        android:clickable="true"
                        android:focusable="true">

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_phone"
                            app:tint="#6B7280" />
                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/btnNavegar"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/bg_btn_add_dark"
                        android:clickable="true"
                        android:focusable="true"
                        android:elevation="4dp">

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_location"
                            app:tint="@android:color/white" />
                    </FrameLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Dirección de entrega -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/bg_info_light"
                android:padding="14dp">

                <FrameLayout
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:background="@drawable/bg_circle_light_green">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_location"
                        app:tint="#10B981" />
                </FrameLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Entregar en"
                        android:textSize="11sp"
                        android:textColor="#9CA3AF" />

                    <TextView
                        android:id="@+id/tvDireccionEntrega"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Av. Principal 123, Lima"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:textColor="#064E3B"
                        android:maxLines="2"
                        android:ellipsize="end" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Botón de centrar mapa -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabCentrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="380dp"
        android:src="@drawable/ic_my_location"
        app:fabSize="mini"
        app:backgroundTint="@android:color/white"
        app:tint="#064E3B"
        app:elevation="8dp" />

    <!-- Hidden views for compatibility -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_estado"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_distancia"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
