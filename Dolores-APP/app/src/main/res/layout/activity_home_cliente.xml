<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cliente_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0FDF4">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:clipToPadding="false"
        android:clipChildren="false"
        android:paddingBottom="110dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:clipChildren="false"
            android:clipToPadding="false">

            <!-- Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="20dp"
                android:paddingTop="24dp">

                <!-- Top Bar: Bienvenida + Carrito -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="20dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="BIENVENIDO"
                            android:textColor="#059669"
                            android:textSize="11sp"
                            android:textStyle="bold"
                            android:letterSpacing="0.1" />

                        <TextView
                            android:id="@+id/tv_bienvenida"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Farmacia Dolores"
                            android:textColor="#064E3B"
                            android:textSize="22sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <!-- Carrito con badge -->
                    <FrameLayout
                        android:id="@+id/btn_carrito"
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:background="@drawable/bg_circle_light_green"
                        android:clickable="true"
                        android:focusable="true">

                        <ImageView
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_shopping_cart"
                            app:tint="#059669" />

                        <TextView
                            android:id="@+id/tv_cart_badge"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_gravity="top|end"
                            android:layout_marginTop="-2dp"
                            android:layout_marginEnd="-2dp"
                            android:background="@drawable/bg_badge_red"
                            android:gravity="center"
                            android:text="0"
                            android:textColor="@android:color/white"
                            android:textSize="10sp"
                            android:textStyle="bold"
                            android:visibility="gone" />
                    </FrameLayout>
                </LinearLayout>

                <!-- Barra de Búsqueda -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_buscar"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:layout_marginBottom="20dp"
                    app:cardElevation="2dp"
                    app:cardCornerRadius="16dp"
                    app:strokeWidth="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="16dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_search"
                            app:tint="#10B981" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:text="Buscar medicamentos..."
                            android:textColor="#6EE7B7"
                            android:textSize="14sp" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Banner Receta -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    app:cardBackgroundColor="#10B981"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp"
                        android:gravity="center_vertical">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="¿Tienes receta?"
                                android:textColor="@android:color/white"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="Escanea el QR del producto"
                                android:textColor="#D1FAE5"
                                android:textSize="12sp" />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btn_escanear"
                                android:layout_width="wrap_content"
                                android:layout_height="36dp"
                                android:layout_marginTop="12dp"
                                android:text="Escanear QR"
                                android:textSize="12sp"
                                android:textColor="#064E3B"
                                app:backgroundTint="@android:color/white"
                                app:cornerRadius="8dp"
                                app:icon="@drawable/ic_camera"
                                app:iconSize="14dp"
                                app:iconTint="#064E3B" />
                        </LinearLayout>

                        <FrameLayout
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:background="@drawable/bg_circle_white_alpha">

                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_medication"
                                app:tint="@android:color/white" />
                        </FrameLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Título Categorías -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Categorías"
                    android:textColor="#064E3B"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp" />
            </LinearLayout>

            <!-- Categorías Horizontales -->
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                android:paddingHorizontal="20dp"
                android:clipToPadding="false"
                android:layout_marginBottom="24dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Categoría: Productos -->
                    <LinearLayout
                        android:id="@+id/cat_productos"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_marginEnd="16dp">

                        <FrameLayout
                            android:layout_width="72dp"
                            android:layout_height="72dp"
                            android:background="@drawable/bg_category_active">

                            <ImageView
                                android:layout_width="28dp"
                                android:layout_height="28dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_medication"
                                app:tint="@android:color/white" />
                        </FrameLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Medicinas"
                            android:textColor="#064E3B"
                            android:textSize="12sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <!-- Categoría: Carrito -->
                    <LinearLayout
                        android:id="@+id/cat_carrito"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_marginEnd="16dp">

                        <FrameLayout
                            android:layout_width="72dp"
                            android:layout_height="72dp"
                            android:background="@drawable/bg_category_inactive">

                            <ImageView
                                android:layout_width="28dp"
                                android:layout_height="28dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_shopping_cart"
                                app:tint="#10B981" />
                        </FrameLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Carrito"
                            android:textColor="#6B7280"
                            android:textSize="12sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <!-- Categoría: Pedidos -->
                    <LinearLayout
                        android:id="@+id/cat_pedidos"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_marginEnd="16dp">

                        <FrameLayout
                            android:layout_width="72dp"
                            android:layout_height="72dp"
                            android:background="@drawable/bg_category_inactive">

                            <ImageView
                                android:layout_width="28dp"
                                android:layout_height="28dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_delivery"
                                app:tint="#10B981" />
                        </FrameLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Pedidos"
                            android:textColor="#6B7280"
                            android:textSize="12sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <!-- Categoría: Perfil -->
                    <LinearLayout
                        android:id="@+id/cat_perfil"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center">

                        <FrameLayout
                            android:layout_width="72dp"
                            android:layout_height="72dp"
                            android:background="@drawable/bg_category_inactive">

                            <ImageView
                                android:layout_width="28dp"
                                android:layout_height="28dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_user"
                                app:tint="#10B981" />
                        </FrameLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Perfil"
                            android:textColor="#6B7280"
                            android:textSize="12sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>
            </HorizontalScrollView>

            <!-- Sección Productos Destacados -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="20dp"
                android:layout_marginBottom="16dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Productos Destacados"
                    android:textColor="#064E3B"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/btn_ver_todos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="VER TODO"
                    android:textColor="#10B981"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:letterSpacing="0.05" />
            </LinearLayout>

            <!-- RecyclerView Productos Horizontales -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_destacados"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:clipChildren="false"
                android:paddingHorizontal="20dp"
                android:paddingVertical="8dp"
                android:layout_marginBottom="16dp" />

            <!-- Sección Botiquín Esencial -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="16dp"
                android:text="Botiquín Esencial"
                android:textColor="#064E3B"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- RecyclerView Productos Verticales -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_esenciales"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:paddingHorizontal="20dp"
                android:layout_marginBottom="16dp" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Bottom Navigation Container -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_gravity="bottom"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="16dp">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_gravity="bottom"
            app:cardCornerRadius="24dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingHorizontal="24dp">

                <!-- Tab Tienda -->
                <LinearLayout
                    android:id="@+id/tab_tienda"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_medication"
                        app:tint="#064E3B" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tienda"
                        android:textColor="#064E3B"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        android:layout_marginTop="2dp" />
                </LinearLayout>

                <!-- Tab Pedidos -->
                <LinearLayout
                    android:id="@+id/tab_pedidos"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_delivery"
                        app:tint="#9CA3AF" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pedidos"
                        android:textColor="#9CA3AF"
                        android:textSize="10sp"
                        android:layout_marginTop="2dp" />
                </LinearLayout>

                <!-- Espacio para el FAB -->
                <View
                    android:layout_width="60dp"
                    android:layout_height="match_parent" />

                <!-- Tab Carrito -->
                <LinearLayout
                    android:id="@+id/tab_carrito"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_shopping_cart"
                        app:tint="#9CA3AF" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Carrito"
                        android:textColor="#9CA3AF"
                        android:textSize="10sp"
                        android:layout_marginTop="2dp" />
                </LinearLayout>

                <!-- Tab Perfil / Logout -->
                <LinearLayout
                    android:id="@+id/tab_logout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_user"
                        app:tint="#9CA3AF" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Salir"
                        android:textColor="#9CA3AF"
                        android:textSize="10sp"
                        android:layout_marginTop="2dp" />
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- FAB Central - Escanear (encima del card para que sobresalga) -->
        <FrameLayout
            android:id="@+id/fab_escanear"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_gravity="center_horizontal|top"
            android:background="@drawable/bg_fab_green"
            android:elevation="16dp"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_camera"
                app:tint="@android:color/white" />
        </FrameLayout>
    </FrameLayout>

    <!-- Hidden views for compatibility -->
    <TextView
        android:id="@+id/tv_rol"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone" />

    <View
        android:id="@+id/btn_logout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
